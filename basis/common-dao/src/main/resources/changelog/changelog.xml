<?xml version="1.0" encoding="ISO-8859-1"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="Alex" id="changelog-1.0">
        <createTable tableName="users">
            <column name="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="phoneNumber" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="devices">
            <column name="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="userId" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="deviceId" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="confirmationTime" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="270320171057" author="Alex">
        <renameColumn tableName="users" oldColumnName="phoneNumber" newColumnName="phone_number" columnDataType="TEXT"/>
        <renameColumn tableName="devices" oldColumnName="userId" newColumnName="user_id" columnDataType="TEXT"/>
        <renameColumn tableName="devices" oldColumnName="deviceId" newColumnName="device_id" columnDataType="TEXT"/>
        <renameColumn tableName="devices" oldColumnName="confirmationTime" newColumnName="confirmation_time" columnDataType="BIGINT"/>
    </changeSet>

    <changeSet id="220320171002" author="Alex">
        <renameTable oldTableName="users" newTableName="profile"/>
        <renameTable oldTableName="devices" newTableName="device"/>
        <renameColumn tableName="device" oldColumnName="user_id" newColumnName="profile_id" columnDataType="TEXT"/>
        <addColumn tableName="profile">
            <column name="create_date_time" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="update_date_time" type="BIGINT(19)">
                <constraints nullable="false"/>
            </column>
            <column name="avatar_uri" type="TEXT"/>
            <column name="name" type="TEXT"/>
            <column name="status" type="TEXT"/>
        </addColumn>
        <createTable tableName="number">
            <column name="number_id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="contact_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="220320171352" author="Alex">
        <createTable tableName="contact">
            <column name="contact_id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="profile_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="230320171229" author="Alex">
        <createTable tableName="profile_settings">
            <column name="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="profile_id" type="VARCHAR(36)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="share_online_status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="share_seen_status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="profile_status">
            <column name="id" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="profile_id" type="VARCHAR(36)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="last_time_online" type="BIGINT(19)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="230320171353" author="Alex">
        <createTable tableName="contact_number">
            <column name="contact_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="number_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
